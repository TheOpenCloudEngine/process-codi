<%
value.metaworksContext.where = mw3.where;

if('index' == mw3.where){
%>
<div class="index_signup">
	<div class="index_signup_inner">
		<table width="100%" cellpadding="0" cellspacing="0">
			<tr>
				<td>
					<%=fields.email.here({htmlTag:'span', htmlAttrChild: {class:'textinput', placeholder: 'Enter your E-mail'}})%>
				</td>
				<td width="100">
					<span onclick="<%=methods.signUpForMain.caller()%>" class="ebutton">Sign Up</span>
				</td>
			</tr>
		</table>

	</div>

	<%
	}else{
	%>
	<div id="signup_popup">


		<div class="login_top_codi" ></div>
		<div class="popup_logo_codi" ></div>

		<% if('forgotpassword' == mw3.how || 'afterforgotpassword' == mw3.how){ %>
		<div class="popup_title"> <span><%=mw3.localize("$ForgotPassword")%></span> </div>
		<%}else if('signup' == mw3.how || 'aftersignup'== mw3.how){ %>
		<div class="popup_title"> <span><%=mw3.localize("$SignUp")%></span> </div>
		<%}%>
		<div class="popup_content">
			<%
			if('login' == mw3.how || 'logout' == mw3.how){
			if(value.companyName){
			%>
			<div class="signup_textbox">
				This is Essencia of <%=value.companyName%>
			</div>
			<%
			}
			%>
			<br />
			<label>E-mail</label>
			<%=fields.email.here({htmlAttrChild: {class:'textinput', placeholder: 'Enter your E-mail', style: 'margin-bottom:15px'}}) %>
			<label>Password</label>
			<%=fields.password.here({htmlAttrChild: {class:'textinput', placeholder: 'Enter your password'}}) %>

			<div class="popup_btn_line_login_l">
				<div id="method_<%=objectId%>_login" class="popup_btn_blue" onclick="<%=methods.login.caller()%>"><%=mw3.localize("$Login")%></div>
				<span style="display:inline-block"><%=fields.rememberMe.here({when:'edit'})%></span><label style="display:inline-block; font-size:12px; color:#666; position:relative;top:-2px;"><%=mw3.localize("$RememberMe")%></label>
			</div>
			<div class="popup_btn_line_login_r">
				<span onclick="<%=methods.goForgotPassword.caller()%>"><%=mw3.localize("$ForgotPassword")%></span>
				<%
				if(value.useSubscribe){
				%>
				<span id="method_<%=objectId%>_subscribe" onclick="<%=methods.goSignUp.caller()%>"><%=mw3.localize("$SignUp")%></span>
				<%
				}
				%>
			</div>
			<div style="clear:both"></div>
			<%
			}else if('afterforgotpassword' == mw3.how){
			%>
			<div class="signup_textbox">
				Please confirm your e-mail.<br>
				We have sent you a account confirmation mail. Please confirm your SPAM folder too.
			</div>

			<%
			}else if('signup' == mw3.how){
			%>
			<label  class="after_result_label">Please enter your valid e-mail address</label>
			<%=fields.email.here({htmlAttrChild: {class:'textinput', placeholder: 'Enter your E-mail', style: 'margin-bottom:15px'}}) %>

			<div class="popup_btn_line_login_l">
				<div id="method_<%=objectId%>_login" class="popup_btn_blue" onclick="<%=methods.signUp.caller()%>"><%=mw3.localize("$SignUp")%></div>
			</div>
			<div class="popup_btn_line_login_r">
				<span onclick="<%=methods.goLogin.caller()%>"><%=mw3.localize("$Login")%></span>
			</div>
			<div style="clear:both"></div>

			<%if(false){%>
			<hr />
			<div class="popup_btn_line_login">
				<div class="fb_login"><%=mw3.localize("$SignupOR")%></div>
				<span id="method_facebook_<%=objectId%>" onclick="mw3.getFaceHelper(<%=objectId%>).loginFacebook();" style="cursor:pointer"><img src="images/signIn/fbLogin.png" /></span>
			</div>
			<%}%>

			<%
			}else if('forgotpassword' == mw3.how){
			%>

			<label  class="after_result_label">Plase enter your e-mail address</label>
			<%=fields.email.here({htmlAttrChild: {class:'textinput', placeholder: 'Enter your E-mail', style: 'margin-bottom:15px'}}) %>

			<div class="popup_btn_line_login_l">
				<div id="method_<%=objectId%>_login" class="popup_btn_blue" onclick="<%=methods.forgotPassword.caller()%>">보내기</div>
			</div>
			<div class="popup_btn_line_login_r">
				<span onclick="<%=methods.goLogin.caller()%>"><%=mw3.localize("$Login")%></span>
			</div>
			<div style="clear:both"></div>

			<%
			}else if('aftersignup'){
			%>

			<label class="after_result_label"><%=mw3.localize("$ConfirmEmail")%></label>
			<%=fields.email.here({htmlAttrChild: {class:'textinput textinputreadonly', readonly: 'readonly',  style: 'margin-bottom:15px'}})%>
			<div class="signup_textbox">
				Thank you for signing<br>
				<b>Please confirm your e-mail for activating your account.</b><br>
				If you didn't get mail, please confirm the SPAM folder or resend mail by clicking following link: <br>
			</div>
			<div class="popup_btn_line_login_l">
				<div id="method_<%=objectId%>_login" class="popup_btn_blue" onclick="<%=methods.signUp.caller()%>"><%=mw3.localize("$ReSend")%></div>
			</div>
			<div style="clear:both"></div>

			<%
			}
			%>
		</div>

		<div class="popup_bottom"></div>
	</div>

<%
}
%>